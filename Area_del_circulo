#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;


void main()
{
	float r,a;
	float p=3.141516;
	cout<<"-----Programa para calcular el area de un circulo-----"<<endl;
	cout<<"ingrese el radio del circulo: ";cin>>r;
	a=p*(r*r);
	cout<<"El area del circulo es: "<<a<<endl;
	getch();
	
}
